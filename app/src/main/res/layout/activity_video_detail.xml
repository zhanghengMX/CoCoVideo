<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoDetailActivity">

    <com.dueeeke.videoplayer.player.IjkVideoView
        android:id="@+id/detailIjkPlayerView"
        android:layout_width="match_parent"
        android:layout_height="210dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/detailTabLayout"
        style="@style/MyTablayoutstyle"
        android:layout_width="395dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ijkPlayerView">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选集"/>
    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/detailPageFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>