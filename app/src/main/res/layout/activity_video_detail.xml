<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoDetailActivity">

    <com.dueeeke.videoplayer.player.IjkVideoView
        android:id="@+id/detailIjkPlayerView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <android.support.design.widget.TabLayout
        android:id="@+id/detailTabLayout"
        style="@style/MyTablayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/detailIjkPlayerView">
    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/detailPageFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailTabLayout"></FrameLayout>

</android.support.constraint.ConstraintLayout>